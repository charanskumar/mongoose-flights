<%- include('../../partials/header') %>

<h2>Add a Ticket</h2>
<form action="/flights/<%= flightId %>" method="POST">
    <label>Seat:
        <input name="seat" required pattern="[A-F][1-9]\d?">
    </label><br><br>
    <label>Price: 
        <input type="number" name="price">
    </label><br><br>
    <button type="submit">Add Ticket</button>
</form>
<p><%= errorMsg %></p>

